
@{
    ViewBag.Title = "ProfilTrenera";
}
<head>
    <link rel="stylesheet" href="~/Scripts/lookCss.css">
</head>
<body style="background-image: url( ~/Images/fitnessCentar.jpg); background-position:center; background-repeat:no-repeat;background-size:cover">
    <h2>Profil Trenera</h2>

    <p>Pregled i izmena mojih podataka</p>
    <form action="/Trener/ProfilTrenera" method="post">
        <table border="1">
            <tr>
                <th>
                    Korisnicko ime:
                </th>
                <th>
                    Lozinka:
                </th>
                <th>
                    Ime:
                </th>
                <th>
                    Prezime:
                </th>
                <th>
                    Pol:
                </th>
                <th>
                    Email:
                </th>
                <th>
                    Datum Rodjenja:
                </th>
                <th>
                    Uloga:
                </th>
                <th>
                    Fitnes Centar:
                </th>
            <tr>
                <td>
                    @ViewBag.TrenerPodaci.KorisnickoIme
                </td>
                <td>
                    <input type="text" name="Lozinka" value=@ViewBag.TrenerPodaci.Lozinka required />
                </td>
                <td>
                    <input type="text" name="Ime" value=@ViewBag.TrenerPodaci.Ime required />
                </td>
                <td>
                    <input type="text" name="Prezime" value=@ViewBag.TrenerPodaci.Prezime required />
                </td>
                <td>
                    <input type="text" name="Pol" value=@ViewBag.TrenerPodaci.Pol required />
                </td>
                <td>
                    <input type="text" name="Email" value=@ViewBag.TrenerPodaci.Email required />
                </td>
                <td>
                    <input type="date" name="DatumRodjenja" value="@ViewBag.TrenerPodaci.DatumRodjenja" min="1990-03-01" max="2007-05-01" required />
                </td>
                <td>
                    @ViewBag.TrenerPodaci.Uloga
                </td>
                <td>
                    @if (ViewBag.FitnesCentar != null)
                    {
        @ViewBag.FitnesCentar}
                </td>
            </tr>

        </table>

        <input type="hidden" value=@ViewBag.korisnicko_ime name="KorisnickoIme" />
        <input type="submit" value="Sacuvaj" name="Sacuvaj" />
    </form>
    <form action="/Login/LoginTrener" method="post">
        <input type="hidden" name="KorisnickoIme" value="@ViewBag.TrenerPodaci.KorisnickoIme" />
        <input type="submit" value="Nazad" />
    </form>
</body>